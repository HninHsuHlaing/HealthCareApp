<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:background="@color/grey_100"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_onetime_fil"
            android:orientation="vertical">
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="မွေးနေ့"
                android:textSize="15sp"
                android:textColor="@color/specilitiesItemColor"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:spinnerMode="dialog"
                        android:entries="@array/days"
                        android:id="@+id/day_spinner"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:spinnerMode="dialog"
                        android:entries="@array/months"
                        android:id="@+id/month_spinner"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:cardElevation="3dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:spinnerMode="dialog"
                        android:entries="@array/years"
                        android:id="@+id/year_spinner"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/blue_500"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:hint="0"
                        android:inputType="number"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:id="@+id/ed_height"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ft"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="သွေးအုပ်စုအမျိုးအစား"
                android:textSize="13sp"
                android:textColor="@color/blue_500"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:entries="@array/bloodType"
                    android:id="@+id/bloodtype_spinner"/>
            </androidx.cardview.widget.CardView>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="မတည့်သောဆေး"
                android:textSize="13sp"
                android:textColor="@color/blue_500"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:hint="မတည့်သောဆေးရှိလျင်ရေးသားပေးပါ"
                    android:padding="10dp"
                    android:maxLines="4"
                    android:lines="5"
                    android:scrollbars="none"
                    android:textSize="13sp"
                    android:maxLength="2000"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:id="@+id/ed_comment"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ပေါင်ချိန်"
                android:textSize="13sp"
                android:textColor="@color/blue_500"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:textSize="13sp"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:id="@+id/ed_weight"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="lb"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="သွေးပေါင်ချိန်"
                android:textSize="13sp"
                android:textColor="@color/blue_500"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:textSize="13sp"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:id="@+id/ed_bloodpressure"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="mmhg"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:visibility="gone"
                android:id="@+id/card_userinfo"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_margin="6dp"
                        android:padding="5dp"
                        android:id="@+id/userinfotext"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <org.mmtextview.components.MMButton
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:background="@drawable/rounded_corner_btn_blue"
                android:id="@+id/btn_next"
                android:text="ဆက်ရန်"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>