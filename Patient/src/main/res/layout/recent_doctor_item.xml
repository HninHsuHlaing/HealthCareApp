<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_recentdoctor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="144dp"
    app:cardCornerRadius="@dimen/card_cornor_radius"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    android:layout_height="181dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/img_doctor_profile"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:padding="@dimen/margin_card_medium"/>
        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/specilitiesItemColor"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/txt_doctorname"
            android:textSize="15sp"
            android:fontFamily="@font/raleway_bold"
            android:text="Dr . Mg Win"
            />
        <org.mmtextview.components.MMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/specilitiesItemColor"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"
            android:textSize="13sp"
            android:maxLines="2"
            android:id="@+id/txt_specialityname"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_medium"
            android:text="အရေပြားနှင့် အလှပရေးရာ"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>