    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/startConsultationText"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:textSize="@dimen/text_regular_1x"
            android:fontFamily="@font/raleway_bold"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:text="ဆွေးနွေးမှုပြုလုပ်နိုင်ပါပြီ"
            android:paddingTop="7dp"
        />
        <org.mmtextview.components.MMTextView
            android:id="@+id/txt_consulation"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/consirmConsultationText"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"
            android:paddingTop="7dp"
            android:text="ဆွေးနွေးမုပြုလုပ်ရန် ဆရာဝန်မှ လက်ခံထားပါသည်"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="19dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:id="@+id/img_userprofile"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <org.mmtextview.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/specilitiesColor"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/txt_doctorname"
                    android:textSize="15sp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Dr . Mg Mg Win"/>
                <org.mmtextview.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/specilitiesItemColor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/txt_specialityname"
                    android:textSize="13sp"
                    android:fontFamily="@font/raleway_medium"
                    android:text="အရေပြားနှင့် အလှပရေးရာ"/>
            </LinearLayout>
        </LinearLayout>
        <org.mmtextview.components.MMTextView
            android:id="@+id/txt_doctor_bigoraphy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/specilitiesItemColor"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="19dp"
            android:textSize="13sp"
            android:fontFamily="@font/raleway_medium"
            android:text="ပါမောကွ  ကြီးသည် UK မှ ဂုဏ်ထူးဆောင် မဟာ ပါရ၈ူဘွဲ့ကို ရရှိထားပြီး ယခုအချိန်တွင် စစ်တွေ မြို့နယ် ဆေး ရုံ ကြီးမှာ တာဝန်ယူကုသပေးနေပါသည်"/>

        <org.mmtextview.components.MMTextView
            android:id="@+id/btnstart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@color/startConsultationText"
            android:layout_marginTop="10dp"
            android:layout_marginRight="21dp"
            android:textSize="15sp"
            android:fontFamily="@font/raleway_bold"
            android:paddingTop="7dp"
            android:text="စတငိဆွေးနွေးနိုင်ပါသည်"/>
    </LinearLayout>
