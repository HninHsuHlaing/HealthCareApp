<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    app:cardCornerRadius="@dimen/card_cornor_radius"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    android:id="@+id/card_speciality"
    android:layout_height="93dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img_speciality"
            android:src="@drawable/ic_baseline_ac_unit_24"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:padding="@dimen/margin_card_medium"/>
        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Dental Specialist"
            android:id="@+id/txt_specialityname"
            android:textColor="@color/specilitiesItemColor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>