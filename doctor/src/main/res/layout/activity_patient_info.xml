<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        android:background="@color/patientinfopageColor"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/arrow_down_short"
            android:textColor="@color/specilitiesColor"
            android:id="@+id/back_patientinfo"
            android:fontFamily="@font/raleway_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/patient_details"
            android:layout_marginLeft="15dp"
            android:textColor="@color/specilitiesColor"
            android:fontFamily="@font/raleway_bold"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_gravity="left"
                        android:layout_height="78dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/uerimage"
                        android:src="@drawable/user"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/patientInfoTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/patient_name"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:id="@+id/pname"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/patient_dateOfbirth"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/pdateofBirth"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/patient_height"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/pheight"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/patient_blood_type"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:text=":name"
                            android:id="@+id/pbloodtype"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/patient_weight"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:id="@+id/pweight"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/patient_blood_pressure"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:textSize="16sp"
                            android:id="@+id/pbloodpressure"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.4">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/patient_reactionalert"
                            android:padding="5dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:text=":name"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/pcomment"
                            android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@color/patientinfopageColor"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/patientInfoTextColor"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/special_question"/>
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/rc_question_answer"/>

                    <mk.zawuni.zawgyiuni_detect.mmfont.components.MMButton
                        android:layout_width="331dp"
                        android:layout_margin="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corner_btn_blue"
                        android:id="@+id/cs_btn_confirm"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/start_consulation"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


    </LinearLayout>
