<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="217dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.mmtextview.components.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ရက်ချိန်းယူခြင်းတောင်းဆိုမှု"
                android:textColor="@color/specilitiesColor"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="5dp"
                android:textSize="14sp"/>
            <org.mmtextview.components.MMTextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ဆွေးနွေးခဲ့ဖူးသောလူနာ"
                android:textColor="@color/white"
                android:padding="6dp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/btn_rounded_corner_orrange"
                android:id="@+id/txt_patient_type"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey_100"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="60dp"
                android:id="@+id/img_patient"
                android:src="@drawable/patient_photo"/>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <mk.zawuni.zawgyiuni_detect.mmfont.components.MMTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Patient Name"
                    android:textStyle="bold"
                    android:id="@+id/txt_patient_name"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/specilitiesColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:id="@+id/txt_patient_dateofbirth"
                    android:text="Date Of Birth"
                    android:drawableLeft="@drawable/ic_baseline_date_range_24"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/SureConfirmLetter"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner_red"
                android:id="@+id/btnSkip"
                android:text="ကျော်မည်"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_corner_cyan"
                android:id="@+id/btnNext"
                android:visibility="gone"
                android:text="နောက်မှ"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:background="@drawable/btn_rounded_corner_yellow"
                android:id="@+id/btnPostpone"
                android:textSize="16sp"
                android:text="အချိန်ရွေးမည်"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_btn_blue"
                android:id="@+id/btnAccept"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:text="လက်ခံမည်"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>