<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_home_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/fragment_home_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/img_doctor"
            android:src="@drawable/profile_thumb"/>
        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/specilitiesColor"
            android:text="Dr. Daw Aye"
            android:id="@+id/drname"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@color/fragment_home_bg"
        android:id="@+id/rc_consulation_request"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/fragment_home_bg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/ly_postpone">
        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ရက်ချိန်းယူမှုမှတ်တမ်းများ"
            android:textSize="17sp"
            android:visibility="gone"
            android:id="@+id/consultationlabel"
            android:textColor="@color/specilitiesColor"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/margin_medium_2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rc_consulation_accept"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/empty_view"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_record"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/grey_900"
                    android:text="@string/no_record_postponse"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>